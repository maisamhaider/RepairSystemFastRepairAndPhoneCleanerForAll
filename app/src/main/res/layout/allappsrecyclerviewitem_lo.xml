<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:background="@drawable/white_stroke_curved_d">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/allAppsMain_Rl"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/allAppImage_Iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorTextOne"
            android:layout_marginBottom="15dp"
            android:id="@+id/allAppName_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:maxWidth="150dp"
            android:maxLines="1"
            android:text="names"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/allAppImage_Iv"
            app:layout_constraintTop_toBottomOf="@+id/allAppImage_Iv" />


        <ImageView
            android:id="@+id/allAppSelected_deselect_Iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="@+id/allAppName_Tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/allAppName_Tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="8dp"
        android:layout_height="30dp"
        android:layout_gravity="right|top"
        android:background="@drawable/black_bar_d"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.cardview.widget.CardView>