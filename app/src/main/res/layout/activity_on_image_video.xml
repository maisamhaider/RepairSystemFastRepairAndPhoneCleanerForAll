<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OnImageVideoAct">

    <VideoView
        android:id="@+id/videoPlayer_vv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/myImage_iv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/backFromImageVideo_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_keyboard_back_orange" />

        <ImageView
            android:src="@drawable/ic_download"
            android:id="@+id/saveImageVideo_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:scaleType="center"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:scaleType="center"
            android:src="@drawable/ic_share"
            android:id="@+id/shareImageVideo_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</RelativeLayout>