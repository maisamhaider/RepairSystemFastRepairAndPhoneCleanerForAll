<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DeepCleanAllImagesAct">

    <TextView
        android:textColor="@android:color/black"
        android:layout_marginTop="5dp"
        android:id="@+id/select_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/noData_tv"
        android:layout_alignBottom="@+id/selectAll_cb1"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="select/deselect" />

    <CheckBox
        android:id="@+id/selectAll_cb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
         android:buttonTint="@color/checkbox_selector"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/DeepCleanAllImages_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/deepCleanImagesClean_ll"
        android:layout_below="@+id/selectAll_cb1"
     />


    <LinearLayout
        android:id="@+id/deepCleanImagesClean_ll"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/black_bg_white_ripple_flat_d"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/deepCleanImagesCleanBtn_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textStyle="bold"
            android:text="CLEAN"
            android:textColor="@color/standard_white"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="594dp" />

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/noData_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No data" />


</RelativeLayout>